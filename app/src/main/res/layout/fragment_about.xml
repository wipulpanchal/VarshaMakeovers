<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="#98E1E0E0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.InfoFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
        android:textColor=" #E8Ba5A"
        android:id="@+id/logout"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#273346"
        android:text="Logout "
        android:layout_width="280dp"
        android:layout_height="50dp">

    </Button>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About our parlour "/>

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="40dp"
        android:background="#98FBC5C5"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">



        <ImageView
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_baseline_call_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_marginLeft="20dp"

                android:textColor="#8F1100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call us"></TextView>

                <TextView
                    android:id="@+id/Mobile"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+9198129918855"></TextView>



            </LinearLayout>



        </LinearLayout>

        <View
            android:background="@color/black"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"
                android:textStyle="bold"

                android:textSize="20sp"
                android:textColor="#8F1100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find us"></TextView>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/map"
                    android:scaleType="centerCrop"

                    android:src="@drawable/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </LinearLayout>

        </LinearLayout>


        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">



        <ImageView

            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_baseline_mail_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:textColor="#8F1100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email us"></TextView>

                <TextView
                    android:id="@+id/mail"
                android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info@varshamakeovers.com"></TextView>



            </LinearLayout>


        </LinearLayout>

            <View
                android:background="@color/black"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView
            android:layout_gravity="center"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/zenkurenaidoregular"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPENING HOURS"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                     <TextView
                         android:textSize="15sp"
               android:fontFamily="@font/poppinslight"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="5dp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Monday"/>
                   <TextView
                         android:textSize="15sp"
               android:fontFamily="@font/poppinslight"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="5dp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tuesday"/>
                   <TextView
                         android:textSize="15sp"
               android:fontFamily="@font/poppinslight"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="5dp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Wednesday"/>
                   <TextView
                         android:textSize="15sp"
               android:fontFamily="@font/poppinslight"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="5dp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Thursday"/>
                   <TextView
                         android:textSize="15sp"
               android:fontFamily="@font/poppinslight"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="5dp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Friday"/>
                   <TextView
                         android:textSize="15sp"
               android:fontFamily="@font/poppinslight"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="5dp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Saturday"/>
                   <TextView
                         android:textSize="15sp"
               android:fontFamily="@font/poppinslight"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="5dp"
               android:textColor="@color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sunday"/>


                </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="15sp"
                            android:fontFamily="@font/poppinslight"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00 AM - 7:00 PM"/><TextView
                            android:textSize="15sp"
                            android:fontFamily="@font/poppinslight"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00 AM - 7:00 PM"/><TextView
                            android:textSize="15sp"
                            android:fontFamily="@font/poppinslight"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00 AM - 7:00 PM"/><TextView
                            android:textSize="15sp"
                            android:fontFamily="@font/poppinslight"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00 AM - 7:00 PM"/><TextView
                            android:textSize="15sp"
                            android:fontFamily="@font/poppinslight"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00 AM - 7:00 PM"/><TextView
                            android:textSize="15sp"
                            android:fontFamily="@font/poppinslight"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00 AM - 6:00 PM"/>
                        <TextView
                            android:textSize="15sp"
                            android:fontFamily="@font/poppinslight"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00 AM - 6:00 PM"/>


                    </LinearLayout>



            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>